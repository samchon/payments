generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("POSTGRES_URL")
}

generator markdown {
    provider = "prisma-markdown"
    title    = "Payments System"
    output   = "../docs/ERD.md"
